# Application
APP_NAME="Photo2Video"
APP_URL="http://localhost:8080"
APP_ENV="development"
APP_DEBUG="true"

# Database
DB_HOST="db"
DB_PORT="3306"
DB_DATABASE="photo2video"
DB_USERNAME="root"
DB_PASSWORD="root_password"

# Telegram
TELEGRAM_BOT_TOKEN="your_bot_token_here"
TELEGRAM_BOT_USERNAME="your_bot_username"
TELEGRAM_APP_URL="https://yourdomain.com"
TELEGRAM_MINI_APP_NAME="Photo2Video"

# Kling Video Provider
KLING_API_URL="https://api.kling.ai/v1"
KLING_API_KEY="your_kling_api_key"
KLING_SECRET_KEY="your_kling_secret_key"
KLING_TIMEOUT="30"
KLING_ENABLED="false"

# Storage
STORAGE_DRIVER="local"
STORAGE_PATH="./storage"
UPLOAD_MAX_SIZE="10485760" # 10MB
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"

# Credits & Payments
CREDITS_PER_VIDEO="1"
PAYMENT_PROVIDER="dummy" # telegram, dummy
TELEGRAM_PAYMENT_TOKEN="your_payment_token"

# Worker
WORKER_SLEEP_INTERVAL="60"
MAX_CONCURRENT_JOBS="5"

# Security
CSRF_TOKEN_NAME="csrf_token"
SESSION_LIFETIME="3600"
RATE_LIMIT_WINDOW="60"
RATE_LIMIT_MAX="10"

# Logging
LOG_LEVEL="debug"
LOG_PATH="./storage/logs"
